  <!-- ========================================================================
    Water sounds. Depends on the c172p.
  -->
  <hull-in-water>
   <name>hull-in-water</name>
   <mode>looped</mode>
   <path>Aircraft/c172p/Sounds/water-still.wav</path>
   <condition>
    <greater-than>
     <property>/fdm/jsbsim/hydro/v-kt</property>
     <value>0</value>
    </greater-than>
   </condition>
   <position>
    <x>10.0</x>
    <y>0.0</y>
    <z>-1.5</z>
   </position>
   <reference-dist>5.0</reference-dist>
   <max-dist>25.0</max-dist>
   <volume>
    <offset>0.3</offset>
   </volume>
  </hull-in-water>

  <at-speed-in-water>
   <name>at-speed-in-water</name>
   <mode>looped</mode>
   <path>Aircraft/c172p/Sounds/water-fast.wav</path>
   <condition>
    <greater-than>
     <property>/fdm/jsbsim/hydro/v-kt</property>
     <value>5</value>
    </greater-than>
   </condition>
   <position>
    <x>6.0</x>
    <y>0.0</y>
    <z>-2.0</z>
   </position>
   <reference-dist>10.0</reference-dist>
   <max-dist>50.0</max-dist>
   <volume>
    <property>/fdm/jsbsim/hydro/v-kt</property>
    <factor>0.05</factor>
    <offset>0.1</offset>
    <min>0.1</min>
    <max>2.0</max>
   </volume>
  </at-speed-in-water>

